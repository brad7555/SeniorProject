        longitude: [],
        id: []
    };
</script>
<body>
    <div class="container">
        <div class="row" style="text-align:center">
            <form class="form-inline">
                <div class="form-group">
                    @using (Html.BeginForm())
                    {
                        @Html.Label("Show me ")
                        <input class="mx-1" type="text" id="name" value="food" />
                        @Html.Label(" within ")
                        @Html.TextBox("numbers", 5, new
                        {
                            @class = "form-control mx-1",
                            @placeholder = "15",
                            @type = "number",
                            @min = 1,
                            @max = 50,
                            @style = "width: 60px;"
                        })
                        @Html.Label(" miles of ")
                        <input class="mx-1" type="text" id="city" value="monmouth" />
                        <input class="mx-1" type="text" id="state" value="oregon" />
                        @Html.Label(".")
                        <button type="button" id="myButton" onclick="establishments()">Search</button>
                    }
                </div>
            </form>
        </div>

        <div class="row">
            <div class="col-lg-6">
                <div id="searchmap" style="height:300px;"></div>
            </div>

            <div class="col-lg-6">
                <div id="routemap" style="height:300px;"></div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-4" id="establishments" style="height:300px;overflow-y:scroll;">Locations:</div>
            <div class="col-lg-4" id="details" style="height:300px;overflow-y:scroll;">Details:</div>
            <ul class="col-lg-4" id="addLocation" style="height:300px;overflow-y:scroll;">Route:</ul>
        </div>
    </div>


        @Styles.Render("https://unpkg.com/leaflet@1.6.0/dist/leaflet.css")
        @Scripts.Render("https://unpkg.com/leaflet@1.6.0/dist/leaflet.js")
        @Styles.Render("~/Content/leaflet-routing-machine.css")
        @Scripts.Render("~/Scripts/leaflet-routing-machine.js")
        @Scripts.Render("~/Scripts/mapScripts.js")
        @Scripts.Render("~/Scripts/main.js")
        @Scripts.Render("~/Scripts/PlacesAPI.js")

</body>