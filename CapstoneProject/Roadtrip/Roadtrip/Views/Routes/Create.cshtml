@{

    ViewBag.Title = "Home Page";

}

<script type="text/javascript">
    searchedLocations = {
        name: [],
        rating: [],
        indexs: [],
        latitude: [],
        longitude: [],
        id: []
    };
    selectedLocations = {
        name: [],
