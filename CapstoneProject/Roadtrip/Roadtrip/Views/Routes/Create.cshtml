<body>
    <div class="container" id="panel">
        <div class="row" style="text-align:center">
            <form class="form-inline">
                <div class="form-group">
                    <br />
                    @using (Html.BeginForm())
                    {
                        @Html.Label("Show me  ")
                        <select id="name" class="form-control">
                            <option value="food">Food</option>
                            <option value="hotels">Hotels</option>
                            <option value="shopping">Shopping</option>
                            <option value="transportation">Transportation</option>
                            <option value="activelife">Active Life</option>
                            <option value="Arts&Entertainment">Arts & Entertainment</option>
                            <option value="nightlife">Nightlife</option>
                        </select>
                        @Html.Label("  within  ")
                        @Html.TextBox("numbers", 5, new
                        {
                            @class = "form-control mx-1",
                            @placeholder = "15",
                            @type = "number",
                            @min = 1,
                            @max = 25,
                            @style = "width: 60px;"
                        })
                        @Html.Label("  miles of  ")
                        <input class="mx-1" type="text" id="city" value="monmouth" />
                        <input class="mx-1" type="text" id="state" value="oregon" />
                        @Html.Label(" .")
                        @Html.Label(" .")
                        <button type="button" id="myButton" class="btn btn-primary" onclick="establishments()">Search</button>
                        <button type="button" id="saveButton" class="btn btn-outline-secondary" style="display: none; margin-left:5px;" onclick="saveRoute()">Save my route!</button>
                    }
                </div>
            </form>

        </div>
        <br />
        <div class="row">

            <div class="col-lg-6">
                <div id="searchmap" style="height:300px;"></div>
            </div>

            <div class="col-lg-6">
                <div id="routemap" style="height:300px;"></div>
            </div>
        </div>

        <div class="row">

            <div class="col-lg-4" id="establishments" style="height:300px;overflow-y:scroll;">Locations:</div>

            <ul class="col-lg-3" id="sortable" style="height:300px; overflow:scroll" onchange="reOrder()"></ul>

            <div class="col-lg-4">
                <div>
                    @Html.Label("Name Your Route! ")
                    <input class="mx-1" type="text" id="routeName" style="height:50px" />
                </div>
                <br />
                <div>
                    @Html.Label("Add a Tag: ")
                    <select id="Tag" class="form-control">
                        <option value="food">Food</option>
                        <option value="family">Family</option>
                        <option value="Fun">Fun</option>
                        <option value="21plus">21plus</option>
                        <option value="Bars">Bars</option>
                        <option value="Shopping">Shopping</option>
                    </select>

                    <select id="Tag2" class="form-control">
                        <option value="food">Food</option>
                        <option value="family">Family</option>
                        <option value="Fun">Fun</option>
                        <option value="21plus">21plus</option>
                        <option value="Bars">Bars</option>
                        <option value="Shopping">Shopping</option>
                    </select>
                </div>
                <br />
                <div id="shortroute">
                    Shortest Route:
                    <button type="button" id="myrButton" onclick="ACS()">generate</button>
                    <div class="col-lg-2" id="short"></div>
                </div>
            </div>
            
        </div>
    </div>

    <div class="modalWrapper">
        <div id="myModal" class="modal">

            <!-- Modal content -->
            <div class="modal-content">
                <div class="modal-header">
                    <span class="close">&times;</span>
                </div>
                <div class="col-lg-12" id="details" style="height:500px;">Details:</div>
                <div class="modal-body" id="modalBody"></div>
                <div class="comments"></div>
                <a href="Create/Comments/1" id="createComment" target="_blank, width = '400px', height = '400px'">Add Comment</a>
            </div>

        </div>
    </div>

    <div id="alertboard" style="display: none;"></div>



    @Styles.Render("https://unpkg.com/leaflet@1.6.0/dist/leaflet.css")
    @Scripts.Render("https://unpkg.com/leaflet@1.6.0/dist/leaflet.js")
    @Styles.Render("~/Content/leaflet-routing-machine.css")
    @Scripts.Render("~/Scripts/leaflet-routing-machine.js")
    @Scripts.Render("~/Scripts/mapScripts.js")
    @Scripts.Render("~/Scripts/main.js")
    @Scripts.Render("~/Scripts/PlacesAPI.js")

</body>







   
